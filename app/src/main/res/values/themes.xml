<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.DuitDroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryVariant">#303F9F</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">#46BDBB</item>
        <item name="colorSecondaryVariant">#46BDBB</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">#303F9F</item>
        <item name="android:windowBackground">#F5F5F5</item>

        <!-- Default text color -->
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#757575</item>

        <!-- Button style -->
        <item name="android:buttonStyle">@style/ButtonPrimary</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="android:statusBarColor">#FFFFFF</item>
    </style>

    <!-- Text appearance styles -->
    <style name="CustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <!-- No action bar theme -->
    <style name="Theme.DuitDroid.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">#303F9F</item>
    </style>

    <!-- Button styles -->
    <style name="ButtonPrimary" parent="Widget.AppCompat.Button">
        <item name="android:background">#3F51B5</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="ButtonSecondary" parent="Widget.AppCompat.Button">
        <item name="android:background">#E0E0E0</item>
        <item name="android:textColor">#212121</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Text styles -->
    <style name="TextHeading" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">#212121</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBody" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#757575</item>
    </style>

    <!-- Input field styles -->
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textColor">#212121</item>
        <item name="android:padding">12dp</item>
    </style>

</resources>
